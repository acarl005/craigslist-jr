<div class="container">
  <div class="row">
    <% @articles.reverse_each do |art| %>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
        <div class="box">
          <div class="box-icon">
              <span class="fa fa-4x fa-html5"><img src="<%= art.img_url || 'http://recorder.monotype.com/img/a.png' %>" class="img-responsive"></span>
          </div>
          <div class="info">
            <h4 class="text-center"><%= art.title %></h4>
            <p class="chars"><%= art.body %></p>
            <a class="pull-left" href="/articles/<%= art.id %>">Read More</a>
            <span class="label label-default"><%= art.contact %></span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


